<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 서버 연결 설정 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alarmony"
        tools:targetApi="31">
        <activity
            android:name=".feature.alarm.NotificationActivity"
            android:exported="true"
            android:label="@string/title_activity_notification"
            android:theme="@style/Theme.Alarmony" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.group.GroupActivity"
            android:exported="false"
            android:label="@string/title_activity_alarm"
            android:theme="@style/Theme.Alarmony" />
        <activity
            android:name=".feature.alarm.AlarmActivity"
            android:exported="true">

        </activity> <!-- FCM 메시징 서비스를 추가하고 인텐트 필터를 설정한다. -->
        <activity
            android:name=".feature.group.GroupSoundActivity"
            android:exported="false"
            android:label="@string/title_activity_alarm"
            android:theme="@style/Theme.Alarmony">
        </activity>
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>